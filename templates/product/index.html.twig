{% extends 'base.html.twig' %}

{% block title %}Boutique - Antonin Fournet{% endblock %}

{% block content %}

<div class="row">

    <div class="col-md-3">

        <h3>Filtrer</h3>
        {{form(form)}}

    </div>

    <div class="col-md-9">

        <h3>La Boutique</h3>

        <div class="row product-container">

            {% for products in product %}

                <div class="col-md-4">

                    <div class="products-item text-center">
                   
                        <a href="{{ path('product', { 'slug' : products.slug }) }}"><img src="/uploads/{{products.illustration}}" alt="{{products.name}}" class="img-fluid">
                    
                        <h4>{{ products.name }}</h4>
                   
                        <span class="products-subtitle">{{products.subtitle}}</span>
                   
                        <span class="products-price">{{ (products.price/100) | number_format(2, ',', '.') }} â‚¬</span>

                    </div>

                </div>

            {% endfor %}

        </div>

    </div>
    
</div>


{% endblock %}
